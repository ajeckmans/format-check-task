{
    "manifestVersion": 1,
    "id": "format-check",
    "name": "Format Check",
    "version": "1.0.0",
    "publisher": "ajeckmans",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "This is a custom task designed to check and ensure the correct formatting of your code files.",
    "categories": ["Azure Repos", "Azure Pipelines"],
    "icons": {
        "default": "images/my-icon.png"
    },
    "files": [
        {
            "path": "format-check/node_modules",
            "addressable": true
        },
        {
            "path": "format-check/scripts",
            "addressable": true
        },
        {
            "path": "format-check/task.json"
        }
    ],
    "contributions": [
        {
            "id": "format-check",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "format-check"
            }
        }
    ]
}