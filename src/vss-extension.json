{
    "manifestVersion": 1,
    "id": "format-check",
    "name": "Format Check dotnet",
    "version": "1.0.0",
    "publisher": "ajeckmans",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "public": true,
    "description": "This task uses 'dotnet format' to validate coding standards in your files. Any detected issues will be annotated in the respective PR files. Essential for maintaining clean and standard compliant code in Azure Repos and Pipelines.",
    "categories": ["Azure Repos", "Azure Pipelines"],
    "icons": {
        "default": "images/my-icon.png"
    },
    "files": [
        {
            "path": "format-check/node_modules",
            "addressable": true
        },
        {
            "path": "format-check/scripts",
            "addressable": true
        },
        {
            "path": "format-check/task.json"
        }
    ],
    "contributions": [
        {
            "id": "format-check",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "format-check"
            }
        }
    ]
}